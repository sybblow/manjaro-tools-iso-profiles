description="Pacman initialization script"

depend() {
	use net
	need haveged gnupg-mount
}

start() {
	ebegin "Running pacman initialization"
	/usr/bin/pacman-key --init >> /var/log/rc.log
	/usr/bin/pacman-key --populate archlinux manjaro --nocolor >> /var/log/rc.log
	eend $?
}
